{
  "apiVersion": 1,
  "groups": [
    {
      "orgId": 1,
      "name": "Lucecis Security",
      "folder": "Lucecis",
      "interval": "1m",
      "rules": [
        {
          "title": "Lucecis Intrusion Detection",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "queryType": "range",
              "relativeTimeRange": {
                "from": 86400,
                "to": 0
              },
              "datasourceUid": "loki",
              "model": {
                "datasource": {
                  "type": "loki",
                  "uid": "loki"
                },
                "editorMode": "builder",
                "expr": "count(rate({job=\"nginx-access\", status=~\"[12]\\\\d{2}\", remote_addr!~\"192\\\\.168\\\\.[56]\\\\.\\\\d{1,3}|207\\\\.66\\\\.6\\\\.186\"} [$__auto]))",
                "instant": true,
                "intervalMs": 1000,
                "maxDataPoints": 43200,
                "queryType": "range",
                "refId": "A"
              }
            },
            {
              "refId": "reducer",
              "queryType": "expression",
              "relativeTimeRange": {
                "from": 0,
                "to": 0
              },
              "datasourceUid": "__expr__",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [
                        0,
                        0
                      ],
                      "type": "gt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": []
                    },
                    "reducer": {
                      "params": [],
                      "type": "count"
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "name": "Expression",
                  "type": "__expr__",
                  "uid": "__expr__"
                },
                "expression": "A",
                "intervalMs": 1000,
                "maxDataPoints": 43200,
                "reducer": "count",
                "refId": "reducer",
                "type": "reduce"
              }
            },
            {
              "refId": "C",
              "relativeTimeRange": {
                "from": 0,
                "to": 0
              },
              "datasourceUid": "__expr__",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [
                        0
                      ],
                      "type": "gt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": [
                        "C"
                      ]
                    },
                    "reducer": {
                      "params": [],
                      "type": "last"
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "type": "__expr__",
                  "uid": "__expr__"
                },
                "expression": "reducer",
                "intervalMs": 1000,
                "maxDataPoints": 43200,
                "refId": "C",
                "type": "threshold"
              }
            }
          ],
          "noDataState": "OK",
          "execErrState": "Error",
          "keepFiringFor": "12h",
          "annotations": {
            "description": "Disconnect the RPI5 server and review NGINX access logs immediately",
            "summary": "SECURITY BREACH: A foreign IP has accessed Lucecis"
          },
          "isPaused": false,
          "notification_settings": {
            "receiver": "pablogpz"
          }
        }
      ]
    }
  ]
}

