{
  "id": null,
  "title": "Lucecis App Metrics",
  "tags": [
    "lucecis"
  ],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "WebSocket Connections",
      "type": "stat",
      "targets": [
        {
          "expr": "lucecis_websocket_connections",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "App Uptime",
      "type": "stat",
      "targets": [
        {
          "expr": "lucecis_uptime_seconds",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "options": {
        "graphMode": "none"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Last Light Command",
      "type": "stat",
      "targets": [
        {
          "expr": "time() - (lucecis_last_light_command_timestamp / 1000)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "options": {
        "graphMode": "none"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 4
      }
    },
    {
      "id": 4,
      "title": "Light Commands",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(lucecis_light_commands_sent[5m])",
          "legendFormat": "Light Commands/sec",
          "refId": "A"
        },
        {
          "expr": "rate(lucecis_homeassistant_api_calls[5m])",
          "legendFormat": "Home Assistant API Calls/sec",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 5,
      "title": "WebSocket Messages",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(lucecis_websocket_messages_sent[5m])",
          "legendFormat": "Messages Sent/sec",
          "refId": "A"
        },
        {
          "expr": "rate(lucecis_websocket_messages_received[5m])",
          "legendFormat": "Messages Received/sec",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}
