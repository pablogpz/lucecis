{
  "id": null,
  "title": "Home Assistant Integration",
  "tags": [
    "lucecis"
  ],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Connection Status Over Time",
      "type": "stat",
      "targets": [
        {
          "expr": "lucecis_homeassistant_connection_status",
          "legendFormat": "HA Connection",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "Disconnected"
                }
              },
              "type": "value"
            },
            {
              "options": {
                "1": {
                  "text": "Connected"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Presence Detection",
      "type": "stat",
      "targets": [
        {
          "expr": "lucecis_presence_status",
          "legendFormat": "Presence",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1
        },
        "mappings": [
          {
            "options": {
              "0": {
                "text": "Away"
              }
            },
            "type": "value"
          },
          {
            "options": {
              "1": {
                "text": "Present"
              }
            },
            "type": "value"
          }
        ]
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Presence Detection",
      "type": "stat",
      "targets": [
        {
          "expr": "lucecis_do_not_disturb_active",
          "legendFormat": "Do Not Disturb",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1
        },
        "mappings": [
          {
            "options": {
              "0": {
                "text": "Active"
              }
            },
            "type": "value"
          },
          {
            "options": {
              "1": {
                "text": "Inactive"
              }
            },
            "type": "value"
          }
        ]
      },
      "options": {
        "graphMode": "none"
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 0
      }
    },
    {
      "id": 4,
      "title": "API Calls Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(lucecis_homeassistant_api_calls[5m])",
          "legendFormat": "API Calls/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      }
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "refresh": "30s"
}
